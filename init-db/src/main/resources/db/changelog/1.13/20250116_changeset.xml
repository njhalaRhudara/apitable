<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="V1.13-20250116-001" author="Zoe" labels="alarm">
        <comment>Add resource id to alarm</comment>
        <sql>
            ALTER TABLE `${table.prefix}datasheet_record_alarm` ADD COLUMN `resource_id` varchar(50) CHARACTER SET utf8mb4 COLLATE
            utf8mb4_unicode_ci DEFAULT NULL COMMENT 'Resource ID(node_id/..)' AFTER `dst_id`;
        </sql>
    </changeSet>
</databaseChangeLog>
